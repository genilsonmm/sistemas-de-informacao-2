package com.exercicio1.model;

import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Size;

public class Livro {
	
	private int id;
	
	//@NotEmpty(message = "O título não pode ser vazio.")
	@NotBlank
	private String titulo;
	
	//@NotEmpty(message = "A editora não pode ser vazio.")
	@NotBlank
	private String editora;
	
	//@NonNull()
	//@Size(min = 10, max = 600, message = "A quantidade de páginas deve ser de 5 à 600.")
	@Size()
	private long paginas;
	
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	
	public String getTitulo() {
		return titulo;
	}

	public void setTitulo(String titulo) {
		this.titulo = titulo;
	}

	
	public String getEditora() {
		return editora;
	}

	public void setEditora(String editora) {
		this.editora = editora;
	}

	public long getPaginas() {
		return paginas;
	}

	public void setPaginas(long paginas) {
		this.paginas = paginas;
	}
}
