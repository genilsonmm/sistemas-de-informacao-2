package com.covidapp.repository;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import com.covidapp.model.Case;

public class LivroRepository {

	private static LivroRepository instance;
	
	private List<Case> livros = new ArrayList<Case>();
	
	public static LivroRepository instance() {
		if(instance == null)
			instance = new LivroRepository();
		
		return instance;
	}
	
	public List<Case> todos(){
		return livros;
	}
	
	public void add(Case livro) {
		livro.setId(proximoId());
		livros.add(livro);
	}
	
	public Case editar(int id, Case livro) throws Exception {
		
		Case livroLocalizado = obterLivro(id);
		
		livroLocalizado.setTitulo(livro.getTitulo());
		livroLocalizado.setEditora(livro.getEditora());
		livroLocalizado.setPaginas(livro.getPaginas());
		
		return livroLocalizado;	
	}
	
	public Case obterLivro(int id) throws Exception {
		
		Optional<Case> livroLocalizado = livros.stream().filter(l -> l.getId() == id).findFirst();
		
		if(livroLocalizado.isPresent())
			return livroLocalizado.get();
		else
			throw new Exception("Não foi possível localizar o livro");
	}
	
	public int remover(int id) throws Exception {
		livros.remove(obterLivro(id));
		return id;
	}
	
	private int proximoId() {
		return livros.size() + 1;
	}
}
